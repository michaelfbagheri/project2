<!-- User Sign Up  Modal2-->
<div id="modal2" class="modal">
  <div class="row" id="user-sign-up">
    <div class="col s12">
      <div class="input-field col s12">
        <label class="control-label">Username</label>
        <input id="users-email" maxlength="100" type="text" required="required" class="form-control" placeholder="johndoe@email.com" />
      </div>
      <div class="input-field col s12">
        <label class="control-label">Display-name</label>
        <input id="username" maxlength="100" type="text" required="required" class="form-control" placeholder="display name" />
      </div>
      <div class="input-field col s12">
        <label class="control-label">Password</label>
        <input id="users-password" maxlength="100" type="password" required="required" class="form-control" placeholder="********" />
      </div>
      <button class="btn btn-primary nextBtn btn-lg pull-right btn-halloween" id="signup-btn" type="button">Submit</button>
    </div>
  </div>
</div>
